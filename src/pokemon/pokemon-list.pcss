.title {
  padding: 1rem;
  margin: 0;
}

.list-container {
  margin-left: 5%;
  width: 90%;
  height: 40%;
  overflow-y: scroll;
}

@media (min-width: 750px) {
  .list-container {
    height: 78%;
  }
}

.filter {
  display: inline-block;
  margin-left: 1rem;

  & input {
    cursor: pointer;
  }

  & label {
    cursor: pointer;
    display: inline-block;
    margin-left: 0.5rem;
  }
}
