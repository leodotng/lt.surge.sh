{
  "name": "ls.surge.sh",
  "version": "0.2.0",
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "base64-img": "^1.0.3",
    "change-case": "^3.0.0",
    "eslint": "^3.3.1",
    "eslint-config-standard": "^6.0.0",
    "eslint-config-standard-react": "^4.0.0",
    "eslint-plugin-flowtype": "^2.11.1",
    "eslint-plugin-jsx-a11y": "^2.1.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-react": "^6.1.2",
    "eslint-plugin-standard": "^2.0.0",
    "postcss-cssnext": "^2.7.0",
    "postcss-import": "^8.1.2",
    "postcss-reloader": "0.0.2",
    "react-scripts": "0.2.2",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^12.0.0"
  },
  "dependencies": {
    "pushstate-server": "^1.12.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.7.0",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2"
  },
  "scripts": {
    "pokeapi": "rm -rf pokedex/pokeapi/ && git clone git@github.com:PokeAPI/pokeapi.git pokedex/pokeapi && node pokedex/generate-data.js && node pokedex/generate-images.js",
    "styles": "postcss-reloader build",
    "react": "react-scripts build",
    "dev": "postcss-reloader start | react-scripts start",
    "build": "postcss-reloader build | react-scripts build",
    "start": "npm run build && node tasks/server.js",
    "lint": "node tasks/lint.js",
    "deploy": "npm version minor && git push --all && git push --tags && npm run build && cp build/index.html build/404.html &&  surge -d lt.surge.sh -p build"
  },
  "postcss-reloader": {
    "dir": "./src",
    "loaders": [
      "postcss-cssnext",
      "postcss-import"
    ]
  },
  "eslintConfig": {
    "extends": "./node_modules/react-scripts/config/eslint.js"
  }
}
